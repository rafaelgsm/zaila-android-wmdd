<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_menu_zaila"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/padding_default"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1"
    app:layout_constraintStart_toStartOf="parent">


    <ImageView
        android:id="@+id/btn_1_menu_zaila"
        android:layout_width="1px"
        android:layout_height="1px"
        android:translationZ="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_image_zaila"
        app:layout_constraintEnd_toEndOf="@id/layout_image_zaila"
        app:layout_constraintStart_toStartOf="@id/layout_image_zaila"
        app:layout_constraintTop_toTopOf="@id/layout_image_zaila" />

    <ImageView
        android:id="@+id/btn_2_menu_zaila"
        android:layout_width="1px"
        android:layout_height="1px"
        android:translationZ="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_image_zaila"
        app:layout_constraintEnd_toEndOf="@id/layout_image_zaila"
        app:layout_constraintStart_toStartOf="@id/layout_image_zaila"
        app:layout_constraintTop_toTopOf="@id/layout_image_zaila" />

    <ImageView
        android:id="@+id/btn_3_menu_zaila"
        android:layout_width="1px"
        android:layout_height="1px"
        android:translationZ="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_image_zaila"
        app:layout_constraintEnd_toEndOf="@id/layout_image_zaila"
        app:layout_constraintStart_toStartOf="@id/layout_image_zaila"
        app:layout_constraintTop_toTopOf="@id/layout_image_zaila" />

    <FrameLayout
        android:id="@+id/layout_image_zaila"
        android:layout_width="@dimen/img_user_menu_size"
        android:layout_height="@dimen/img_user_menu_size_extra"
        android:background="@null"
        android:layout_marginBottom="@dimen/margin_bottom_zaila_menu"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_user_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_img_zaila" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>